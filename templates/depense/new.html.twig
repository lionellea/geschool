{% extends 'template.html.twig' %}
{% block title %}
<title> Dépenses | Ajout</title>   
{% endblock %}
{% block hearder %}
<div class="pageheader">
    <h3>
        <i class="fa fa-home"></i>Accueil
    </h3>
    <div class="breadcrumb-wrapper">
        <span class="label">vous êtes ici:</span>
        <ol class="breadcrumb">
            <li>
                <a href="#">
                    Accueil
                </a>
            </li>
            <li class="active">
                Enregistrer une dépense
            </li>
        </ol>
    </div>
</div>
