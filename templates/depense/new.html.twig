        {% endfor %}
        <br>
        <div class="panel-heading">
            <div class="panel-control">
                <a class="btn btn-info" href="{{ path('depense_index') }}" title="Retour à la liste"><i class="fa fa-chevron-left"></i></a>
                
            </div>
            <h3 class="panel-title">Ajouter une dépense</h3>
        </div>

        {{ include('depense/_form.html.twig') }}
    </div>
{% endblock %}
