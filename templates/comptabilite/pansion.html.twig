{% extends 'template.html.twig' %}

{% block title %}Comptabilité | dépenses {% endblock %}

{% block hearder %}
<div class="pageheader">
    <h3>
        <i class="fa fa-home"></i>Accueil
    </h3>
    <div class="breadcrumb-wrapper">
        <span class="label">vous êtes ici:</span>
        <ol class="breadcrumb">
            <li>
                <a href="#">
                    Accueil
                </a>
            </li>
            <li class="active">
                Liste des pansions
            </li>
        </ol>
    </div>
</div>
{% endblock %}

{% block body %}
     <div class="panel">
        <div class="panel-heading">
            <h3 class="panel-title">Liste des dépenses effectué</h3>
        </div>
        <div class="panel-body">
            <table class="table table-striped table-bordered" id="studentTable">
                <thead>
                    <tr>
                        <th style="width: 30px">Libelle</th>
                        <th style="width: 30px">Date d'enregistrement</th>
                        <th style="width: 30px">Montant à verser</th>
                        <th style="width: 30px">Montant verser</th>
                        <th style="width: 30px">Reste</th>
                        <th style="width: 30px">Montant total</th>
                    </tr>
                </thead>
                <tbody>
                {% for pansion in pansions %}
                    <tr>
                        <td style="width: 30px">{{ pansion.libelle }}</td>
                        <td style="width: 30px">{{ pansion.datee ? pansion.datee|date('Y-m-d') : '0000-00-00' }}</td>
                        <td style="width: 30px">{{ pansion.montant }}</td>
                        <td style="width: 30px">{{ pansion.momtantV }}</td>
                        <td style="width: 30px">{{ pansion.reste }}</td>
                        <td style="width: 30px">{{pansion.montantT }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td class="text-center" class="text-center" colspan="6">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}

{% block javascript %}
    <script type="text/javascript">
        $("table#studentTable").DataTable({
            "ordering": false;
        });
    </script>
{% endblock %}
