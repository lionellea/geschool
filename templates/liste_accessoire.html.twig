{% extends 'template.html.twig' %}

{% block title %}Comptabilité | accessoires{% endblock %}

{% block hearder %}
<div class="pageheader">
    <h3>
        <i class="fa fa-home"></i>Accueil
    </h3>
    <div class="breadcrumb-wrapper">
        <span class="label">vous êtes ici:</span>
        <ol class="breadcrumb">
            <li>
                <a href="#">
                    Accueil
                </a>
            </li>
            <li class="active">
                Liste des accessoires acheter 
            </li>
        </ol>
    </div>
</div>
{% endblock %}

{% block body %}
     <div class="panel">
        <div class="panel-heading">
            <h3 class="panel-title">Liste des accessoires acheter</h3>
        </div>
        <div class="panel-body">
            <table class="table table-striped table-bordered" id="studentTable">
                <thead>
                    <tr>
                        <th>Matricule</th>
                        <th>Nom et prénom</th>
                        <th>Salle</th>
                        <th>Accessoire</th>
                        <th>Date d'achat</th>
                        <th>Montant</th>
                        <th>Total montant</th>
                    </tr>
                </thead>
                <tbody>
                    {% for eleve in eleves %}
                        <tr>
                            <td>{{ eleve.matricule }}</td>
                            <td>{{ eleve.nom }} {{ eleve.prenom }} </td>
                            <td>{{ eleve.salle }}</td>
                            <td>{{ eleve.accessoire }}</td>
                            <td>{{ eleve.datei ? eleve.datei|date('Y-m-d') : '' }}</td>
                            <td>{{ eleve.montant }}</td>
                            <td>{{eleve.tmontant }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td class="text-center" colspan="7">no records found</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}

{% block javascript %}
    <script type="text/javascript">
        $("table#studentTable").DataTable({
            "ordering": false;
        });
    </script>
{% endblock %}
