        <h3><i class="fa fa-home"></i> Achat </h3>
        <div class="breadcrumb-wrapper">
            <span class="label">vous Ãªtes ici:</span>
            <ol class="breadcrumb">
                <li class=""> <a href="{{ path('accueil') }}">Accueil</a></li>
                <li class=""> <a href="#">Achat</a></li>
                <li class="active"> <a class="text-bold" href="{{ path('acheter_index') }}">Liste</a></li>
            </ol>
        </div>
