{% block body %}
    <div class="panel">
        <div class="panel-heading">
            <h3 class="panel-title" style="text-align: center;">Acheter</h3>
        </div>
        <div class="panel-body">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Produit</th>
                        <th>Prix</th>
                        <th>DateAchat</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for acheter in acheters %}
                    <tr>
                        <td>{{ acheter.id }}</td>
                        <td>{{ acheter.accessoire.libelle|upper }}</td>
                        <td>{{ acheter.prix }}</td>
                        <td>{{ acheter.dateAchat ? acheter.dateAchat|date('Y-m-d') : '0000-00-00' }}</td>
                        <td>
                            <a class="" href="{{ path('acheter_show', {'id': acheter.id}) }}">show</a>
                            <a class="" href="{{ path('acheter_edit', {'id': acheter.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td class="text-center" colspan="4">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
